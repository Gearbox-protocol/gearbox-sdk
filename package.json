{
  "name": "@gearbox-protocol/sdk",
  "version": "0.0.0-semantic-release",
  "description": "Gearbox SDK",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "contracts"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc --p tsconfig.build.json",
    "dev": "tsc -w --p tsconfig.build.json",
    "types:clean": "rm -rf forge-out src/types",
    "types:build": "forge build",
    "types:split": "ts-node ./scripts/split-index.ts",
    "types:index": "ts-node ./scripts/create-index.ts",
    "types": "yarn types:clean && yarn types:build && npx wagmi generate && yarn types:split && yarn types:index",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "prettier:ci": "npx prettier --check .",
    "lint": "eslint \"**/*.ts\" --fix",
    "lint:ci": "eslint \"**/*.ts\"",
    "typecheck:ci": "tsc --noEmit",
    "test": "npx mocha -r ts-node/register -r dotenv/config 'src/**/*.spec.ts'"
  },
  "dependencies": {
    "@gearbox-protocol/bots-v3": "^1.5.1",
    "@gearbox-protocol/sdk-gov": "^2.20.0",
    "@wagmi/cli": "^2.1.13",
    "axios": "^1.2.6",
    "decimal.js-light": "^2.5.1",
    "deep-eql": "^4.1.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
   
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.0.3",
       "@redstone-finance/evm-connector": "^0.5.4",
    "@types/chai": "^4.3.3",
    "@types/deep-eql": "^4.0.0",
    "@types/jest": "^28.1.7",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.7.6",
   
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "husky": ">=6",
    "jest": "^28.1.3",
    "lint-staged": ">=10",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
      "tslog": "^4.9.2",
    "typescript": "5.0.4",
    "viem": "2.13.2"
  },
  "prettier": "@gearbox-protocol/prettier-config",
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  }
}
