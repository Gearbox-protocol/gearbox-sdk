{
  "name": "@gearbox-protocol/sdk",
  "version": "1.0.0",
  "description": "Gearbox SDK",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "author": "Mikael Lazarev",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "pub": "rm -rf ./src/types/hardhat.ts && cp ./src/types/*.d.ts ./lib/types && tsc && yarn publish",
    "lint": "eslint \"**/*.ts\" --fix",
    "prepush": "yarn lint --max-warnings=0",
    "prepare": "husky install",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "decimal.js-light": "^2.5.1",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "@gearbox-protocol/eslint-config": "^1.4.0",
    "@gearbox-protocol/prettier-config": "^1.4.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.3",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "ethers": "5.6.9",
    "husky": ">=6",
    "jest": "^28.1.3",
    "lint-staged": ">=10",
    "prettier": "^2.7.1",
    "ts-node": "^10.1.0",
    "tslog": "^3.3.3",
    "typescript": "^4.7.3"
  },
  "prettier": "@gearbox-protocol/prettier-config",
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{sol,json,md}": "prettier --write"
  }
}